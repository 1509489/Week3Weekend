<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="#0099cc"
                                             tools:context=".SplashActivity">


    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp" app:srcCompat="@drawable/android_logo"
            android:id="@+id/ivLogo"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="104dp"
            android:layout_marginStart="24dp" android:layout_marginEnd="24dp"/>
    <TextView
            android:text="Loading..."
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvLoading" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/ivLogo" android:fontFamily="@font/aldrich"
            android:textSize="36sp" android:textColor="@color/colorWhite" android:textAlignment="center"/>
</android.support.constraint.ConstraintLayout>